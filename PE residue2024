{
  if (i %in% rownames(otu_cp_root_combine_tax) == TRUE)
  {nodeattrib_add_root[nodeattrib_add_root$node==i,"Kingdom"] <- paste(otu_cp_root_combine_tax[i,1:1])}
  else
  { nodeattrib_add_root[nodeattrib_add_root$node==i,"Kingdom"]<- "NA"}
}


